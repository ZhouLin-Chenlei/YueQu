<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.community.yuequ.view.CustomRatioImageView
                android:id="@+id/iv_movie_cover_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/test3"
                android:scaleType="centerCrop"
                app:rrHeight="4"
                app:rrWidth="3"/>

            <TextView
                android:id="@+id/tv_movie_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_list_margin_left"
                android:layout_marginRight="@dimen/base_list_margin_left"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/funny"
                android:textColor="@color/grey900"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_movie_dsc_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_list_margin_left"
                android:layout_marginRight="@dimen/base_list_margin_left"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/funny"
                android:textColor="@color/grey875"
                android:textSize="14sp"
                />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/pink950"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.community.yuequ.view.CustomRatioImageView
                android:id="@+id/iv_movie_cover_mid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/test3"
                android:scaleType="centerCrop"
                app:rrHeight="4"
                app:rrWidth="3"/>

            <TextView
                android:id="@+id/tv_movie_name_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_list_margin_left"
                android:layout_marginRight="@dimen/base_list_margin_left"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/funny"
                android:textColor="@color/grey900"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_movie_dsc_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_list_margin_left"
                android:layout_marginRight="@dimen/base_list_margin_left"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/funny"
                android:textColor="@color/grey875"
                android:textSize="14sp"
                />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/pink950"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.community.yuequ.view.CustomRatioImageView
                android:id="@+id/iv_movie_cover_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/test3"
                android:scaleType="centerCrop"
                app:rrHeight="4"
                app:rrWidth="3"/>

            <TextView
                android:id="@+id/tv_movie_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_list_margin_left"
                android:layout_marginRight="@dimen/base_list_margin_left"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/funny"
                android:textColor="@color/grey900"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_movie_dsc_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_list_margin_left"
                android:layout_marginRight="@dimen/base_list_margin_left"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/funny"
                android:textColor="@color/grey875"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pink950"/>
</LinearLayout>