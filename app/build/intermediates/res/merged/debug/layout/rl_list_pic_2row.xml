<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/grey300">

        <TextView
            android:id="@+id/tv_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_list_margin_left"
            android:layout_marginRight="@dimen/base_list_margin_left"

            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:textColor="@color/grey900"
            android:textSize="17sp"
            android:text="如果你是一头猪"
            android:lines="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_dsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_list_margin_left"
        android:layout_marginRight="@dimen/base_list_margin_left"
        android:layout_marginTop="@dimen/base_list_margin_left"
        android:layout_marginBottom="@dimen/base_list_margin_left"
        android:ellipsize="end"
        android:textColor="@color/grey900"
        android:textSize="16sp"
        android:text="这是一个关于笨蛋的故事吗？有一天我走在回家的路上唱着妈妈教给我的歌"
        android:maxLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.community.yuequ.view.CustomRatioImageView
                android:id="@+id/iv_movie_cover_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/test3"
                android:scaleType="centerCrop"
                app:rrHeight="2"
                app:rrWidth="3"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/base_list_margin_left"
            android:layout_height="match_parent"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.community.yuequ.view.CustomRatioImageView
                android:id="@+id/iv_movie_cover_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/test3"
                android:scaleType="centerCrop"
                app:rrHeight="2"
                app:rrWidth="3"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pink950"/>
</LinearLayout>